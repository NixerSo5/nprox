<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nixer.nprox.dao.NUserDao">

    <resultMap type="com.nixer.nprox.entity.NUser" id="NUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="NUserMap">
        select id,
               username,
               password,
               role
        from nprox.n_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="NUserMap">
        select id,
               username,
               password,
               role
        from nprox.n_user limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="NUserMap">
        select
        id, username, password, role
        from nprox.n_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="role != null and role != ''">
                and role = #{role}
            </if>
        </where>
    </select>
    <select id="getUserByName" resultType="com.nixer.nprox.entity.NUser">
        select  * from  n_user where username=#{username}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into nprox.n_user(username, password, role)
        values (#{username}, #{password}, #{role})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into nprox.n_user(username, password, role)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.password}, #{entity.role})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into nprox.n_user(username, password, role)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.password}, #{entity.role})
        </foreach>
        on duplicate key update
        username = values(username) , password = values(password) , role = values(role)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update nprox.n_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
        </set>
        where id = #{id}
    </update>
    <update id="updatePwd">
        update n_user set password = '${psw}' where id='${id}'
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from nprox.n_user
        where id = #{id}
    </delete>

</mapper>

